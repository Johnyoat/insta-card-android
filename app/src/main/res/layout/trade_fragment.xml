<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.trade.TradeFragment">

    <include layout="@layout/toolbar"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tradeTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackGray"
        app:tabInlineLabel="true"
        app:tabSelectedTextColor="@color/primaryColor"
        app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:tabTextColor="@color/white"
        app:tabMode="scrollable"
        app:tabIconTint="@color/tab_color_item"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tradeViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>